<div class="card shadow mb-4 mt-2">
  <div class="card-header ">
    <a href="/admin/booking" class="btn btn-sm btn-warning"><i class="fas fa-long-arrow-alt-left fa-2x"></i></a>

  </div>
  <div class="row">
    <div class="col-md-5">
      <img src="http://localhost:3000/<%= booking.payments.proofPayment %> " style="width: 100%;" alt="Proof Payment">
    </div>
    <div class="col-md-7">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-borderless" width="100%" cellspacing="0">

            <tr>
              <th>Name Member : </th>
              <td><%= booking.memberId.firstName %> <%= booking.memberId.lastName %></td>
            </tr>


            <tr>
              <th>Total : </th>
              <td><%= booking.total %></td>
            </tr>

            <tr>
              <th>Bank From : </th>
              <td><%= booking.payments.bankFrom %></td>
            </tr>

            <tr>
              <th>Title : </th>
              <td><%= booking.itemId.title %></td>
            </tr>

            <tr>
              <td></td>
              <td>
                <div class="row py-2">

                  <% if (booking.payments.status === "Proses") { %>
                  <form action="/admin/booking/<%= booking._id %>/confirmation?_method=PUT" method="POST"
                    class="ml-2 pl-1">
                    <button type="submit" class="btn btn-success  btn-sm">
                      <i class="fas fa-check"></i>
                      Confimation
                    </button>
                  </form>
                  <form action="/admin/booking/<%= booking._id %>/reject?_method=PUT" method="POST" class="ml-4">
                    <button type="submit" class="btn btn-danger  btn-sm">
                      <i class="fas fa-times"></i>
                      Reject
                    </button>
                  </form>
                  <% } %>

                </div>
              </td>
            </tr>

          </table>
        </div>

      </div>
    </div>
  </div>
</div>